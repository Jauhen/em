<project name="Memgen" default="all" basedir=".">
    <target name="css">
        <concat destfile="war/memgen.css">
            <fileset dir="war/css" includes="**/*.css" />
            <fileset dir="war/components" includes="**/*.css"/>
            </concat>
    </target>

    <target name="js">
        <concat destfile="war/memgen.js" encoding="utf-8" eol="lf" fixlastline="yes">
            <file file="war/components/meme/meme.js"/>
            <file file="war/components/meme/create.js"/>
            <file file="war/components/vote/vote.js"/>
            <file file="war/components/comment/comment.js"/>
            <file file="war/js/analytics.js"/>
            <file file="war/js/msg.js"/>
            <file file="war/js/plugin.js"/>
            <file file="war/js/app.js"/>
        </concat>
    </target>

    <target name="all" depends="css, js"></target>
</project>
