{
    "name": "EPAM Memegen",
    "version": "3.0",
    "manifest_version": 2,
    "icons" : {
        "128" : "troll_128.png"
    },
    "description": "http://epammeme.appspot.com/",
    "browser_action": {
        "default_icon": "troll_19.png"
    },
    "content_scripts" : [
      {
        "matches" : [
            "*://*.epammeme.appspot.com/", "*://localhost/"
        ],
        "js" : ["contentscript.js"],
        "run_at" : "document_idle"
      }
    ],
    "background" : {
        "scripts": ["jquery-1.9.0.min.js", "background.js"]
    },
    "permissions": [
        "*://*.epammeme.appspot.com/", "*://localhost/"
    ]
}
